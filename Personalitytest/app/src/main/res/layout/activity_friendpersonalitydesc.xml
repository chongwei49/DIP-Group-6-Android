<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personality_historybg"
    tools:context=".Tests">


    <RelativeLayout
        android:id="@+id/history_personality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp" />


        <TextView
            android:id="@+id/username"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/segeodisplaysemibold"
            android:text="User Name"
            android:textSize="35dp" />

        <ImageView
            android:layout_width="81dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/email2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_alignParentStart="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/segeodisplay"
            android:text="User_Name@domain.com"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/email2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/segeodisplay"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/age"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/segeodisplay"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="170dp"
            android:layout_marginBottom="160dp"
            android:fontFamily="@font/segeodisplaysemibold"
            android:gravity="center"
            android:text=""
            android:textColor="#4E4848"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/personalitybacktoconnect"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/backicon2" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="91dp"
            android:layout_marginTop="86dp"
            app:srcCompat="@drawable/rectangle_34" />

        <TextView
            android:id="@+id/friends_personalityresult"
            android:layout_width="224dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="465dp"
            android:layout_marginEnd="74dp"
            android:fontFamily="@font/segeodisplaysemibold"
            android:gravity="center"
            android:text="BOSS"
            android:textColor="#4E4848"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/personality_avatar"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="70dp"
            app:srcCompat="@drawable/leader" />

        <androidx.cardview.widget.CardView
            android:id="@+id/friends_personality"
            android:layout_width="500sp"
            android:layout_height="100dp"
            android:layout_below="@+id/friends_personalityresult"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="20dp">


            <TextView
                android:id="@+id/description"
                android:layout_width="327dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:fontFamily="@font/segeodisplay"
                android:text="Glamorous is your middle name. You like it \n whenever all the eyes in the room are on you."
                android:textColor="#4E4848"
                android:textSize="17sp" />


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>